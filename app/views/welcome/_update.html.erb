<div class="update">
  <div class="heading">
    <div class="tag">
      <%= render partial: 'postit', locals: {update: update} %>
    </div>
    <div class="content">
      <div class="description">
        <b><%= update.author %></b> <%= update.type_as_string %>
      </div>
      <div class="title">
        <%= update.article.title %>
      </div>
    </div>
  </div>
  <div class="top_frame">
  </div>
  <div class="preview">
    <%= raw update.diff_snippet %>
  </div>
  <div class="bottom_frame">
  </div>
  <div class="footer">
    &rarr; read more
  </div>
</div>
